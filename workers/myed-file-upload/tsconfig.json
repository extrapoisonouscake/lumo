{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["index.ts", "../../constants/**/*", "../../helpers/**/*"],
  "exclude": ["node_modules"]
}
